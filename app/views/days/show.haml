.activate-upper-nav
.upper-nav
  %nav.settings
    %ol
      %li
        = link_to '#' do
          %i.fa.fa-cog
          Edit connected apps
      %li
        = link_to account_path do
          %i.fa.fa-cog
          Edit email and password

  %nav.calendar
    %ol
      %li.month February
      - 28.times do |n|
        %li= n+1
      %li.month March
      - 31.times do |n|
        %li= n+1
      %li.month April
      - 30.times do |n|
        %li= n+1

  .deactivate-upper-nav

.activate-meta-nav  
%nav.meta
  = link_to '#' do
    %i.fa.fa-moon-o
    %span.title Slept 8 hours
  = link_to '#', class: 'activate-meta-pane', 'data-target' => 'journal' do
    %i.fa.fa-book
    %span.title Wrote 356 words
  = link_to '#', class: 'activate-meta-pane', 'data-target' => 'photos' do
    %i.fa.fa-instagram
    %span.title Took 2 photos
  = link_to '#', class: 'activate-meta-pane', 'data-target' => 'music' do
    %i.fa.fa-music
    %span.title Played 11 songs
  = link_to '#', class: 'weather' do
    %span.low 30&deg;
    %span.high 50&deg;
    %span.condition Cloudy
  .deactivate-meta-nav

