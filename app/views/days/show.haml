.activate-upper-nav
.upper-nav
  %nav.settings
    %ol
      %li
        = link_to account_path do
          %i.fa.fa-cog
          Settings
  = render :partial => 'calendar'

  .tilt-hint
    %span Calendar
  .deactivate-upper-nav

.activate-meta-nav  
= render :partial => 'meta-nav'

- @places.each do |place|
  .meta.marker-detail{ 'data-starttime' => "#{place['starttime']}" }
    %h2.title
    - @instagram_photos.reverse.each do |photo|
      - if timestamp_in_range?(photo['timestamp'], place['starttime'], place['endtime'])
        = render 'photo', photo: photo
    .item.music
      = image_tag('music1.jpg')
      .detail
        %span.album Lanterns
        %span.artist Son Lux
    .item.music
      = image_tag('music2.jpg')
      .detail
        %span.album The Grand Budapest Hotel (Original Soundtrack
        %span.artist Various Artists
    .time
      %span.arrived
      %span.duration
    = link_to '', '#', class: 'detail-previous'
    = link_to '', '#', class: 'detail-next'

= render :partial => 'places'
= render :partial => 'journal'
= render :partial => 'music'
= render :partial => 'photos'

.loading-text
  %span= @today.strftime('%a %b %e')
= render :partial => 'map'
